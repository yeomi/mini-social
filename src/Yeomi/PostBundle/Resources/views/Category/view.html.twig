{% extends("YeomiPostBundle::layout.html.twig") %}

{% block metaTitle %}Partagez vos défis et histoires dans la catégorie {{ category.name }} - Tpaschiche{% endblock %}
{% block metaDescription %}{{ category.description }}{% endblock %}

{% block body %}
    <section class="page-category">
        <header class="category-header">
            <h1>{{ category.name }}</h1>
            <p>{{ category.description }}</p>
        </header>

        {% block homeViews %}

            <div class="container container-lists">
                <div class="full column-container">
                    <div class="index-menu-wrapper">
                        <div class="index-menu" data-offset="0" data-quantity="12">
                            <div class="tab popular active"><a class="loader-list" data-target="{{ path("yeomi_post_view_list_category_popular", {"category": category.id}) }}" href="">Les + populaires</a></div>
                            <div class="tab latest"><a class="loader-list" data-target="{{ path("yeomi_post_view_list_category_recents", {"category": category.id}) }}" href="">Les + récents</a></div>
                        </div>
                    </div>

                    <div class="ajax-wrapper">
                        {{ render(controller("YeomiPostBundle:Main:listPopular", {"category": category.id, "limit": 12})) }}
                    </div>
                    <div class="more-posts">
                        <a href="">{% trans %}See more posts{% endtrans %}</a>
                    </div>
                </div>
            </div>
        {% endblock %}




    </section>


{% endblock %}