{% extends("YeomiPostBundle::layout.html.twig") %}


{% block body %}
    <section class="page-category">
        <header class="category-header">
            <h1>{{ category.name }}</h1>
            <p>{{ category.description }}</p>
        </header>

        {% block homeViews %}

            <div class="container container-lists">
                <div class="full column-container">
                    <div class="index-menu" data-offset="0">
                        <div class="tab defi active"><a class="loader-list" data-target="{{ path("yeomi_post_view_list_category", {"categoryId": category.id,"type": "defi"}) }}" href="">Les d√©fis</a></div>
                        <div class="tab histoire"><a class="loader-list" data-target="{{ path("yeomi_post_view_list_category", {"categoryId": category.id,"type": "histoire"}) }}" href="">Les histoires</a></div>
                    </div>

                    <div class="ajax-wrapper">
                        {{ render(controller("YeomiPostBundle:Category:listCategory", {"categoryId": category.id, "type": "defi"})) }}
                    </div>
                    <div class="more-posts">
                        <a href="">{% trans %}See more posts{% endtrans %}</a>
                    </div>
                </div>
            </div>
        {% endblock %}




    </section>


{% endblock %}