{% extends("YeomiPostBundle::layout.html.twig") %}


{% block body %}
    <div class="page-index">
    {% block headerBan %}
        <div class="wrapper-width home-ban">
            <aside id="home-ban" class="top-ban">

                <span class="top">Une envie, un partage, un défi...</span>
                <span class="middle">Tpaschiche de faire un selfie dans un lieu insolite !</span>
                <span class="bottom">Rejoignez Tpaschiche pour le partage et l'entraide.</span>

                <a class="btn big register" href="{{ path("yeomi_user_register") }}">{% trans %}Register{% endtrans %}</a>

            </aside>
        </div>
    {% endblock %}

    {% block homeViews %}

        <div class="container">
            <div class="column-container">
                <div class="index-menu">
                    <div class="tab defi active"><a href="">Les défis</a></div>
                    <div class="tab histoire"><a href="">Les histoires</a></div>
                </div>

                {% for defi in defis %}

                    <div class="defi list-view">

                        <table>
                            <tr>
                                <td class="left">
                                    <div class="content">{{ truncatePost(defi.content, 200) }}</div>
                                </td>

                                {% if defi.images[0] is defined %}
                                <td class="right">
                                    <a class="image" href="">
                                        <img src="{{ asset('uploads/img/post/' ~ defi.images[0].id ~ '.' ~ defi.images[0].value) }}" alt=""/>
                                    </a>
                                </td>
                                {% endif %}
                            </tr>

                            <tr>
                                <td class="details" colspan="2">
                                    <span class="post-date">{{ defi.created|date("d/m/y \\à G\\hi") }}</span>
                                    <a href="">{% if  defi.user %}{{ defi.user.username }}{% else %}anonyme{% endif %}</a> -
                                    <a href="">{{ defi.categories[0].name }}</a>

                                </td>
                            </tr>
                        </table>

                        <div class="actions-btn">
                            <input type="button" value="I like your challenge (12)"/>
                            <input type="button" value="It sucks... (5)"/>
                            <a class="comments" href="">(10)</a>
                            <a class="share" href=""></a>

                            <a class="readmore" href="{{ path("yeomi_post_view_full", {"id": defi.id}) }}">{% trans %}Read More{% endtrans %}</a>
                        </div>


                    </div>

                {% endfor %}
            </div>
        </div>

    {% endblock %}

    </div>
{% endblock %}