{% extends("YeomiPostBundle::layout.html.twig") %}


{% block body %}

    <div class="page-register style-login">
        <div class="container">
            <aside class="illustration">
            </aside>

            <section>
                <h3>{% trans %}Create an account{% endtrans %}</h3>


                {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_label(form.username) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}

                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}

                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
                {{ form_widget(form.password) }}


                <div class="submit-area">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn'}, 'label': 'Register'|trans}) }}
                </div>


                {{ form_end(form) }}

            </section>
        </div>
    </div>

{% endblock %}