{% extends("YeomiAdminBundle::layout.html.twig") %}

{% block content %}
    <h3 class="content-title">Creation d'un article</h3>

    {{ form_errors(form) }}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form.title, {"attr" : {"placeholder": "Choissisez le titre de l'article", "class": "form-control"}}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.body, {"attr" : {"class": "ckeditor"}}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.image.file) }}
        <p class="help-block">Choisissez une image pour illustrer l'article.</p>
    </div>
    {{ form_widget(form.save, {"attr" : {"class": "btn btn-default"}, "label": "Enregistrer l'article"}) }}
    {{ form_end(form) }}

{% endblock %}